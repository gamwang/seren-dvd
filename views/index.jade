extends layout
block content
  header
  div(id="banner" class="col-md-8" style="text-align:left")
    a(href="/" class="logo") RandView
  div(id="banner" class="col-md-4" style="text-align:right") 
    if name
      h4 Welcome #{name}!
      form(id="logout_form" action='/logout',method='get')
        input(type='submit' value='Logout') 
    else
      form(id="login_form" action='/login',method='post')
        div(class="col-xs-4") 
          input(id='email' type='text',value='' placeholder='email' name='email')
        div(class="col-xs-4") 
          input(id='password' type='password' value='' placeholder='password' name='password')  
        div(class="col-xs-4" id="login_button")
          input(type='submit' value='Log in') 
  body
    if name
      div(id="content")
        form(id="video_query_form" action="")
          input(id="video_query_input" autocomplete="off" placeholder='Enter Random type of video')
          button(id="video_query_button") Enter
        div(id="video_display")
      div(id="online_list")
        h2() Online:
      ul(id="people_online")
      ul(id="messages")
      div(id="chat_div")
        form(id="message_form" action="")
          input(id="message" autocomplete="off")
          button(id="message_button") Send
    else
      div(id="signup")
        h1(id="signup_font") Signup
        form(action='/signup' method='post')
          div
            input(type='text' value='' placeholder='first name' name='frstnme')
            input(type='text' value='' placeholder='last name' name='lstnme')
          div
            input(type='email' value='' placeholder='email' name='email')
          div
            input(type='password' value='' placeholder='password' name='psswrd')
          div
            input(type='submit' value='Signup')
  script(type="text/javascript" src="./javascripts/clientSide.js")
